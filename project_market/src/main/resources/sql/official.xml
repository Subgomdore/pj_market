	<!-- 공지사항 글작성 -->
	
	<insert id="off_insert" parameterType="off">	
		insert into official
		(of_num,of_name,of_subject, of_content, of_readcount, of_date)
		values
	(official_seq.nextval,#{of_name},#{of_subject}, #{of_content}, #{of_readcount}, sysdate)
	</insert>
	
	<!-- 공지사항 글갯수 -->
	<select id="off_count" resultType="int">
		select count(of_num) from official
	</select>
	

<!-- 게시판 목록 (page번호를 전달받아서 startRow와 endRow를 구함) -->
